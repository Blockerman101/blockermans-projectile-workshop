private playervar Number[] bigProjIDs = [];
rule: 'Make big proj'
Event.OngoingPlayer
if (_EP().IsButtonHeld(Button.PrimaryFire))
{

    ProjectileArgs bigProj: {Oversize: 0.2, Speed: 50, Lifetime: 3, ..ProjectileArgs.Default()};
    ProjectileArgs up: {Direction: bigProj.Direction + Up() * 0.2, ..bigProj};
    ProjectileArgs left: {Direction: bigProj.Direction + Left().AsWorldVector(_EP(), Transformation.Rotation) * 0.2, ..bigProj};
    ProjectileArgs right: {Direction: bigProj.Direction + Right().AsWorldVector(_EP(), Transformation.Rotation) * 0.2, ..bigProj};
    CreateCustomProjectile(bigProj);
    bigProjIDs.ModAppend(lastProjectileID);
    CreateCustomProjectile(up);
    CreateCustomProjectile(left);
    CreateCustomProjectile(right);
    MinWait();
    //LoopIfConditionIsTrue();
}

disabled rule: 'Explode big projs!'
Event.OngoingPlayer
if (bigProjIDs.Any(v => projData[v].ProjState == projectileStates.Inactive))
{
    LogToInspector("Kaboom!");
    Number _waitlessIterator = 0;
    while (_waitlessIterator < bigProjIDs.Length) {
        if (projData[bigProjIDs].ProjState == projectileStates.Inactive) {
            PlayEffect(AllPlayers(), PlayEffect.GoodExplosion, Color.Red, projData[bigProjIDs[_waitlessIterator]].Position, 15);
            PlayEffect(AllPlayers(), PlayEffect.BuffExplosionSound, TeamOf(_EP()), projData[bigProjIDs[_waitlessIterator]].Position, 150);
            bigProjIDs.ModRemoveByIndex(_waitlessIterator);
        }
        else {_waitlessIterator++;}
    }
}

